.stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 32px;
    /* Increased gap */
    margin-bottom: 48px;
}

.stat-card {
    background: #fff;
    padding: 28px;
    border-radius: 24px;
    /* More rounded */
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.03);
    /* Softer initial shadow */
    display: flex;
    align-items: center;
    gap: 24px;
    transition: all 0.3s cubic-bezier(0.25, 0.1, 0.25, 1);
    border: 1px solid rgba(0, 0, 0, 0.02);
    /* Very subtle border */
}

.stat-card:hover {
    transform: translateY(-4px);
    /* Slightly more lift */
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.06);
    /* Diffuse shadow */
}

.stat-icon-bg {
    width: 56px;
    /* Larger icon bg */
    height: 56px;
    border-radius: 16px;
    /* Squircle-ish */
    display: flex;
    align-items: center;
    justify-content: center;
}

.stat-icon-bg.purple {
    background-color: rgba(175, 82, 222, 0.1);
}

.stat-icon-bg.blue {
    background-color: rgba(0, 113, 227, 0.1);
}

.stat-icon-bg.orange {
    background-color: rgba(255, 149, 0, 0.1);
}

.stat-icon-bg.green {
    background-color: rgba(52, 199, 89, 0.1);
}

.stat-label {
    font-size: 13px;
    color: #86868b;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 4px;
}

.stat-value {
    font-size: 28px;
    font-weight: 700;
    color: #1d1d1f;
    letter-spacing: -0.5px;
}

.dashboard-content-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 32px;
}

.content-card {
    background: #fff;
    border-radius: 24px;
    padding: 32px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.03);
    border: 1px solid rgba(0, 0, 0, 0.02);
}

.card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24px;
    border-bottom: 1px solid #f5f5f7;
    padding-bottom: 16px;
}

.card-header h3 {
    font-size: 20px;
    font-weight: 600;
    color: #1d1d1f;
    letter-spacing: -0.3px;
}

/* Refined Table Styles */
.orders-table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
    min-width: 900px;
    /* Ensure horizontal scroll on small screens */
}

.orders-table th {
    text-align: left;
    padding: 16px 24px;
    font-size: 12px;
    font-weight: 600;
    color: #86868b;
    border-bottom: 1px solid #e5e5ea;
    white-space: nowrap;
    text-transform: uppercase;
    letter-spacing: 0.8px;
}

.orders-table td {
    padding: 20px 24px;
    font-size: 14px;
    color: #1d1d1f;
    border-bottom: 1px solid #f5f5f7;
    vertical-align: middle;
}

.orders-table tr:hover td {
    background-color: #fafafa;
}

.orders-table tr:last-child td {
    border-bottom: none;
}

/* Status Badges - Pill Style */
.status-badge {
    display: inline-flex;
    align-items: center;
    padding: 4px 12px;
    /* Tighter padding */
    border-radius: 999px;
    /* Pill shape */
    font-size: 12px;
    font-weight: 600;
    text-transform: capitalize;
    white-space: nowrap;
}

.status-badge.pending {
    background-color: #FFF4E5;
    color: #F5A623;
}

.status-badge.processing {
    background-color: #E3F2FD;
    color: #2196F3;
}

.status-badge.out-for-delivery {
    background-color: #E8EAF6;
    color: #3F51B5;
}

.status-badge.delivered {
    background-color: #E8F5E9;
    color: #4CAF50;
}

.status-badge.cancelled {
    background-color: #FFEBEE;
    color: #F44336;
}

/* Action Buttons */
.view-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 8px 16px;
    border-radius: 999px;
    background-color: #f5f5f7;
    color: #1d1d1f;
    font-size: 13px;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
}

.view-btn:hover {
    background-color: #e5e5ea;
    transform: translateY(-1px);
}

.status-select {
    padding: 8px 16px;
    border-radius: 12px;
    border: 1px solid #d2d2d7;
    background-color: #fff;
    font-size: 13px;
    color: #1d1d1f;
    cursor: pointer;
    transition: all 0.2s;
    min-width: 140px;
}

.status-select:focus {
    border-color: #0071e3;
    outline: none;
    box-shadow: 0 0 0 3px rgba(0, 113, 227, 0.1);
}

.empty-state-card {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 140px;
    color: #86868b;
    font-size: 14px;
}

.order-link {
    color: #0071e3;
    font-weight: 500;
    text-decoration: none;
}

.order-link:hover {
    text-decoration: underline;
}

/* Action Buttons */
.action-btn {
    width: 32px;
    height: 32px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: none;
    cursor: pointer;
    transition: all 0.2s;
}

.action-btn.edit {
    background-color: #e3f2fd;
    color: #2196f3;
}

.action-btn.delete {
    background-color: #ffebee;
    color: #f44336;
}

.action-btn:hover {
    transform: translateY(-2px);
    filter: brightness(0.95);
}

@media (max-width: 1024px) {
    .dashboard-content-grid {
        grid-template-columns: 1fr;
    }
}

/* Payments Page Specific Responsive Styles */
.payments-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.payments-stats {
    display: flex;
    gap: 24px;
    text-align: right;
}

.payments-controls {
    display: flex;
    justify-content: space-between;
    margin-bottom: 24px;
    gap: 16px;
}

.payments-search-container {
    position: relative;
    width: 400px;
}

.payments-search-input {
    width: 100%;
    padding: 12px 12px 12px 40px;
    border-radius: 12px;
    border: 1px solid #d2d2d7;
    font-size: 14px;
    outline: none;
    transition: border-color 0.2s;
}

.download-btn {
    background: #0071e3;
    color: #fff;
    border: none;
    gap: 8px;
    white-space: nowrap;
}

@media (max-width: 768px) {
    .payments-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 24px;
    }

    .payments-stats {
        width: 100%;
        justify-content: space-between;
        text-align: left;
    }

    .payments-controls {
        flex-direction: column;
    }

    .payments-search-container {
        width: 100%;
    }

    .download-btn {
        width: 100%;
    }
}

